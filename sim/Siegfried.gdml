	<physvol>
	<volumeref ref="IRShield" />
	<position name="pIRShield" unit="mm" x="0" y="0" z="45.25" />
	</physvol>     
	<physvol>
	<volumeref ref="VacuumCan" />
	<position name="pVacuumCan" unit="mm" x="0" y="0" z="82.5" />
      </physvol>
    </volume>
  </structure>

  <setup name="Default" version="1.0" >
    <world ref="World" />
  </setup>

