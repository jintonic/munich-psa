      <atom value="14.0007" />
    </material>
    <material name="AluminumAlloy" Z="13">
      <D value="2.70"/>
      <atom value="26.9815386"/>
    </material>
    <material Z="32" formula=" " name="NaturalGe" >
      <D value="5.32" />
      <atom value="72.6503" />
